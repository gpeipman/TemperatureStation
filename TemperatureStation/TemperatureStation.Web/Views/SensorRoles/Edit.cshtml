@model SensorRoleEditViewModel

<div class="row margin-bottom-40">
    <div class="col-md-6 col-sm-6">
        <h1>Edit</h1>

        <form asp-action="Edit">
            <div class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="MeasurementId" />
                <div class="form-group">
                    <label asp-for="SensorId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="SensorId" class="form-control" asp-items="@Model.Sensors"></select>
                        <span asp-validation-for="SensorId" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RoleName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a href="@Url.Action("Edit","Measurements", new { id = Model.MeasurementId })" class="btn btn-primary">Back to measurement</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
