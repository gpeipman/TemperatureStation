@model MeasurementEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Measurement</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsActive" />
                    <label asp-for="IsActive"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@if (Model.Id > 0)
{
    <div>
        <h4>Sensors</h4>
        <p>
            <a asp-action="Create" asp-controller="SensorRoles" asp-route-measurementid="@Model.Id">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>Sensor</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sensorRole in Model.SensorRoles)
                {
                    <tr>
                        <td>@sensorRole.SensorName</td>
                        <td>@sensorRole.RoleName</td>
                        <td>
                            <a asp-action="Edit" asp-controller="SensorRoles" asp-route-id="@sensorRole.Id">Edit</a> |
                            <a asp-action="Delete" asp-controller="SensorRoles" asp-route-id="@sensorRole.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
