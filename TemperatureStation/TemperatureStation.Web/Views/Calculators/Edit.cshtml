@model CalculatorEditViewModel

<div class="row margin-bottom-40">
    <div class="col-md-6 col-sm-6">
        <h1>Edit</h1>

        <form asp-action="Edit">
            <div class="form-horizontal">
                <h4>SensorRole</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="MeasurementId" />
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="Name" class="form-control" asp-items="@Model.Calculators"></select>
                        <span asp-validation-for="Name" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Parameters" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Parameters" class="form-control" />
                        <span asp-validation-for="Parameters" class="text-danger" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a href="@Url.Action("Edit","Measurements", new { id = Model.MeasurementId })" class="btn btn-primary">Back to measurement</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
